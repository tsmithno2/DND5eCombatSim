@page "/home"

<h3>Home</h3>
<br />

<h3>Brief description: This will more than likely replace the index page, but for now will just serve to be a place holder to make sure that everything works the way i envision it</h3>
<br />

@if (CharactersList == null)
{
    <p><em>Loading Characters...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Character Name</th>
                <th>AC</th>
                <th>Armor Id</th>
                <th>Weapon Id</th>
                <th>Wins</th>
                <th>Losses</th>
                <th>Total Games</th>
                <th>Win-Loss Percentage</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var characters in CharactersList)
            {
                <tr>
                    @*<td><img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{characters.CharacterId}-small.jpg")" class="rounded-circle" /></td>*@
                    <td></td>
                    <td>@characters.CharacterName</td>
                    <td>@characters.AC</td>
                    <td>@characters.ArmorId</td>
                    <td>@characters.WeaponId</td>
                    <td>@characters.MatchWins</td>
                    <td>@characters.TotalMatches - @characters.MatchWins</td>
                    <td>@characters.TotalMatches</td>
                    <td>69%</td>
                    <td>
                        @*<a href="@($"employeedetail/{employee.EmployeeId}")" class="btn btn-primary table-btn">
                                <i class="fas fa-info-circle"></i>
                            </a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

