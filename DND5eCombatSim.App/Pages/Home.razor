                    <td>@armor.ArmorId</td>
                    <td>@armor.ArmorName</td>
                    <td>@armor.ArmorType</td>
                    <td>@armor.AC</td>
                    <td>
                        @*<a href="@($"employeedetail/{employee.EmployeeId}")" class="btn btn-primary table-btn">
                                <i class="fas fa-info-circle"></i>
                            </a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

